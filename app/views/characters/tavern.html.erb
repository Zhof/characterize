<h1 align="center" class="index-title">The Tavern</h1>
<div class="index-container">
  <div class="character-grid">
    <% @characters.each_with_index do |character| %>
      <%= link_to character_path(character) do %>
        <div class="character-card">
          <%= image_tag character.photo, :class => "avatar" %>
          <div class="character-card-content">
            <div class="content-header-tavern">
              <div class="inner-header">
                <h4 align="right"><%= character.name %></h4>
                <p> created by <b><%= character.user.username %></b></p>
              </div>
            </div>
            <div class="content-body-tavern">
              <p><%= truncate(character.story, :length => 90) %></p>
              <div class="pints">
                <p><%= character.rating %><%= image_tag 'pint.png', class:"pint_icon"%></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
